    <ImageView android:id="@+id/image" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginRight="25dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_github_circle_white_24dp"/>
